@model Expense_Tracker.Models.MultipleTable
@{
    ViewData["Title"] = "Index";


    //int cp = Model.PageIndex;
    //int tp = Model.TotalPages;
    //var next = Model.HasNextPage ? "" : "disabled";
    //var prev = Model.HasPreviousPage ? "" : "disabled";
    //int i = (cp - 1) * ViewBag.pSize + 1;
}

<h1 class="text-center">Add New Expense</h1>

<div class="row">
    <div class="col-12 m-2">
        <div class="container">
            <a asp-action="Create" class="btn btn-primary fa fa-plus" title="Create new Expanses"></a>
        </div>

        <form method="post">
            Stardate: <input type="date" name="startdate" />
            Enddate: <input type="date" name="enddate" />
            <input type="button" class="btn btn-outline-success" value="search" />
            <a asp-action="Index" class="btn-light">Get All Records</a>
            <table class="table table-bordered table-striped">
                <thead class="bg-secondary">
                    <tr>

                        <th>
                            Date

                        </th>
                        <th>
                            Amount

                        </th>
                        <th>
                            Expense Category
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Expenses)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Expense_Category.CategoryName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Expenses" asp-route-id="@item.ExpenseId" class="btn btn-info">Edit</a>

                                <a asp-action="Delete" asp-controller="Expenses" asp-route-id="@item.ExpenseId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>


        <div class="container">
            <span>Total Expense List: @Model.Expenses.Count()</span>

        </div>

    </div>
</div>
