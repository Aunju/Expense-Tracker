@model Expense_Tracker.Models.Expenses
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center ml-3">Update Expenses</h2>


<div class="row">
    <div class="col-md-8">
        <form asp-action="CreatorEdit">

            <input asp-for="ExpenseId" type="hidden" />
            <div class="form-group">
                <label asp-for="Date" class="col-2"></label>
                <input type="date" asp-for="Date" id="expenseDate" class="col-5" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Amount" class="col-2"></label>
                <input type="number" class="col-5" asp-for="Amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label class="col-2">BillCategory</label>
                <select asp-for="Id" class="col-5" asp-items="@(new SelectList( ViewBag.categories,"Id","CategoryName"))">
                    <option value="0" selected="selected">--Select One--</option>
                </select>
                <span asp-validation-for="Id" class="text-danger col-1"></span>
            </div><br />
            <div class="col-10 offset-2">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="container mb-4">
        <a asp-action="Index" asp-controller="Expenses" >Back List</a>
    </div>
</div>
